
@{
    ViewData["Title"] = "Index";

    //La siguiente función impide que se desplegué el template. 
    { Layout = null; }
}
<style>
    body {
        background: #FFF633;
        background: linear-gradient(to right, #F1C625, #F7AF67)
    }

    .bg {
        background-image: url(img/MuniRauco.jpg);
        background-size: 720px 600px;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<div class=" container w-75 gb-secondary mt-5 rounded shadow"">
    <div class="row aling-items-stretch">
        <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6">
        </div>
        <div class="col bg-white p-5 rounded-end">
            <div class="text-end">
                <!-- Logo !-->
                <img src="img/logoRauco.jpg" alt="" width="150px" height="100px">
            </div>
            <h4 class="fw-bold text-center py-4"> Ingresa a tu plataforma virtual </h4>
            <!--Formulario-->
            <form asp-action="Validate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="mb-4">
                        <label for="email" class="form-label"><i class="bi bi-person-fill"></i> Correo Electrónico </label>
                        <input type="email" class="form-control" id="email" name="Correo" placeholder="Ingrese su correo">
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label"><i class="bi bi-lock-fill"></i> Contraseña </label>
                        <input type="password" class="form-control" id"="password" name="Clave" placeholder="Ingrese su contraseña">
                    </div>
                    <!--Error message-->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Error"]
                        </div>
                    }
                    <div class="d-grid py-3">
                        <input type="submit" class="btn btn-warning" value="Iniciar sesión">
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

